SystemName      Manganese Oxide
SystemLabel     mno_ldau

NumberOfAtoms           2
NumberOfSpecies         2
%block Chemical_Species_Label
  1   25    Mn_ldau
  2    8     O_ldau
%endblock Chemical_Species_Label

%block PS.lmax                
   Mn_ldau  3
    O_ldau  3
%endblock PS.lmax
PAO.BasisSize SZ

LatticeConstant     4.43 Ang
%block LatticeVectors
 0.00     0.50      0.50
 0.50     0.00      0.50
 0.50     0.50      0.00
%endblock LatticeVectors

AtomicCoordinatesFormat ScaledCartesian
%block AtomicCoordinatesAndAtomicSpecies
 0.000   0.000   0.000  1
 0.500   0.500   0.500  2
%endblock AtomicCoordinatesAndAtomicSpecies

kgrid_cutoff     5 Ang
XC.functional    GGA
XC.authors       PBE
Spin             Polarized
MeshCutoff       50 Ry
DM.MixingWeight  0.200
DM.NumberPulay   3
DM.UseSaveDM     F

%block DM.InitSpin
 1   + 
%endblock DM.InitSpin

LDAU.FirstIteration T
LDAU.ThresholdTol   1.0d-2
LDAU.PopTol         4.0d-4
LDAU.ProjectorGenerationMethod 2

%block LDAU.proj
Mn_ldau  1  # number of shells of projectors
n=3 2       # n, l
3.000 0.000 # U(eV), J(eV)
0.000 0.000 # rc, \omega (default values)
%endblock LDAU.proj

WriteIonPlotFiles T
WriteMullikenPop  1
