# -*- makefile -*-
.PHONY: test
test :
	@fns=${TEST}_${TACC_SYSTEM}.sh \
	 fn=${TEST}.sh \
	 && if [ -f $${fns} ] ; then \
	        eval ./$${fns} \
	    ; elif [ -f ${nf} ] ; then \
	        eval ./$${fn} \
	    ; else \
	        echo "No such script: $${fns} or $${fn}" && exit 1 \
	    ; fi \

clean ::
	@rm -f a.out ${TESTS} *.o *~ *.out
